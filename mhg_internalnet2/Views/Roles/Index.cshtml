@model IEnumerable<mhg_internalnet2.ViewModel.RoleViewModel>
@{
    ViewBag.Title = "Index";
}

<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index","Home")">Home</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">Roles</a>
        </li>
    </ul>

</div>
<br/>
<div class="row"> 

    @Html.ActionLink("Create New", "Create", "Roles", null, new { @class = "btn btn-circle btn-primary" })
</div>
<div class="row">

    <div class="col-md-6">
        <!-- BEGIN SAMPLE TABLE PORTLET-->
        <div class="portlet">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-check-square-o"></i>Roles Table
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>

                </div>
            </div>
            <div class="portlet-body">
                <div class="table-scrollable">
                    <table class="table table-striped table-bordered table-advance table-hover">
                        <thead>
                            <tr>
                                <th>
                                    <i class="fa fa-flag-o"></i>   Name
                                </th>
                                <th class="hidden-xs">
                                    <i class="fa fa-question"></i> Descrition
                                </th>

                                <th>
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RoleName)
                                    </td>

                                </tr>
                            }





                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>
