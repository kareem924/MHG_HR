@model IEnumerable<mhg_internalnet2.ViewModel.UserRoleViewModel>
@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box grey-cascade">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-globe"></i>Manage Users
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>

                </div>
            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <a id="sample_editable_1_new" href="@Url.Action("CreateUser","Users")" class="btn green">
                                    Add New <i class="fa fa-plus"></i>
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover" id="sample_1">
                    <thead>

                        <tr>
                            <th class="table-checkbox">
                                <input type="checkbox" class="group-checkable" data-set="#sample_1 .checkboxes" />
                            </th>
                            <th>
                                Username
                            </th>
                          
                            <th>
                                Roles
                            </th>
                            <th>
                                Status
                            </th>
                            <th>
                                Action
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {

                            <tr class="odd gradeX">
                                <td>
                                    <input type="checkbox" class="checkboxes" value="1" />
                                </td>
                                <td>
                                    @user.UserName
                                </td>
                              
                                <td>
                                    @foreach (var role in user.Roles)
                                        {
                                        <span>@role.RoleName</span> <span>/</span>
                                        }
                                </td>
                                <td>
                                    @if (user.Active == true)
                                        {
                                        <span class="label label-sm label-success">
                                            Active
                                        </span>
                                        }
                                        else
                                        {
                                        <span class="label label-sm label-danger">
                                            Inactive
                                        </span>
                                        }
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "EditUser", "Users", new { userid = user.UserId }, new { @class = "btn btn-xs btn-primary" }) |
                                    @Html.ActionLink("Change Role", "Edit", new { userid = user.UserId }, new { @class = "btn btn-xs btn-info" }) |
                                    @Html.ActionLink("Change Status", "EditUser", "Account", new { Id = user.UserId }, new { @class = "btn btn-xs btn-default" }) |
                                    @Html.ActionLink("Manage Documents", "Index", "Document", new { Id = user.UserId }, new { @class = "btn btn-xs btn-warning" })
                                </td>
                            </tr>


                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>
